<resources>

  <!-- Base application theme. -->
  <style name="AppThemeNoBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">#FFFFFF</item>
    <item name="colorPrimary">#FFFFFF</item>\
    <item name="colorAccent">@color/colorAccent</item>

    <item name="colorControlActivated">?attr/colorAccent</item>
    <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="actionMenuTextColor">@android:color/white</item>
    <item name="colorControlNormal">@android:color/white</item>
  
  </style>
  <style name="AppThemeDarkDialog" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorPrimary">@color/iron</item>
    <item name="android:background">@color/primary</item>
  </style>
  <style name="AppThemeNoBar.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">

    <item name="android:titleTextStyle">@style/AppThemeNoBar.ActionBar.Text</item>
    <item name="colorPrimaryDark">#FFFFFF</item>
    <item name="colorPrimary">#FFFFFF</item>\
    <item name="colorAccent">@color/colorAccent</item>

    <item name="colorControlActivated">?attr/colorAccent</item>
    <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="actionMenuTextColor">@android:color/white</item>
    <item name="colorControlNormal">@android:color/white</item>
  </style>
  <style name="AppThemeNoBar.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/blue</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="AppThemeNoBar.ActionBar.Text" parent="@android:style/TextAppearance">
    <item name="android:textColor">#FFFFFF</item>
  </style>
  <style name="AppThemeBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
</resources>
